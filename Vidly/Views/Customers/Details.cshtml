@model Vidly.Models.Customer

@{
    ViewBag.Title = Model.Name;
}

<h2>@Model.Name</h2>

<div>
    <h4>@Html.DisplayFor(model => model.Name)</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.IsSubscribedToNewsletter)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsSubscribedToNewsletter)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BirthDate)
        </dt>

        <dd>
            @if (Model.BirthDate.HasValue)
            {
                @Html.DisplayFor(model => model.BirthDate)
            }

        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MembershipType.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MembershipType.Name)
        </dd>

    </dl>
</div>
<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
</div>

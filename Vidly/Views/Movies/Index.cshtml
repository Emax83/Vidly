@model IEnumerable<Vidly.Models.Movie>

@{
    ViewBag.Title = "Movies";
}

<h2>
    Movies

    @*@Html.ActionLink("Create New", "Create", "Movies", new { }, new { @class = "btn btn-primary" })*@
</h2>

@if (!Model.Any())
{
    <p>We don't have any movie yet</p>
    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
    </p>
}
else
{
    <table class="display dataTable small" id="table-list">
        <thead>
            <tr>
                <th>


                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Genre.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReleaseDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumberInStock)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.ActionLink("Create New", "Create")

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item.Name, "Details", new { id = item.Id })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genre.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReleaseDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumberInStock)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                        <a  href="javascript:void(0)" class="js-delete" data-movie-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>

        </tfoot>
    </table>
}

@section scripts{
    <script>

        

        $(document).ready(function () {
            //https://datatables.net/download/
            $('#table-list').DataTable();

            $("#table-list").on("click", ".js-delete", function () {
                var button = $(this);
                if (confirm("Are you sure?")) {
                    $.ajax({
                        url: "/api/movies/" + $(this).attr("data-movie-id"),
                        method: "DELETE",
                        success: function () {
                            button.parents("tr").remove();
                        },
                        error: function () { alert('Error'); }
                    });

                }
            });

        });
    </script>
}
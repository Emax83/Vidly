
@{
    ViewBag.Title = "New Rental";
}

<h2>New Rental Form</h2>

<form name="newrental" id="newrental">
    <div class="form-group">
        <label>Customer</label>
        <div class="tt-container">
            <input id="customer" name="customer" type="text" value="" data-rule-validcustomer="true" required  class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label>Movie</label>
        <div class="tt-container">
            <input id="movie" name="movie" type="text" value="" data-rule-atleastonemovie="true" class="form-control"  />
        </div>
    </div>
    <div class="form-group">
        <div class="">
            <ul class="list-group"  name="movies" id="movies" style="max-width: 280px;"></ul>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script>

        $(document).ready(function () {
            try {
                var vm = {
                    movieIds: []
                };

                var customers = new Bloodhound({
                    datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
                    queryTokenizer: Bloodhound.tokenizers.whitespace,
                    //prefetch: '../data/films/post_1960.json',
                    remote: {
                        url: '/api/customers?query=%QUERY',
                        wildcard: '%QUERY'
                    }
                });

                var movies = new Bloodhound({
                    datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
                    queryTokenizer: Bloodhound.tokenizers.whitespace,
                    //prefetch: '../data/films/post_1960.json',
                    remote: {
                        url: '/api/movies?query=%QUERY',
                        wildcard: '%QUERY'
                    }
                });

                $('#customer').typeahead({
                    minLenght: 3,
                    highlight: true
                }, {
                        name: 'customer',
                        display: 'name',
                        source: customers
                    }).on("typeahead:select", function (e, customer) {
                        //console.log(JSON.stringify(customer));
                        vm.customerId = customer.id;
                    });

                $('#movie').typeahead({
                    minLenght: 3,
                    highlight: true
                }, {
                        name: 'movie',
                        display: 'name',
                        source: movies
                    }).on("typeahead:select", function (e, movie) {
                        //console.log(JSON.stringify(movie));
                        vm.movieId = movie.id;
                        $("#movies").append("<li class='list-group-item'>" + movie.name + "</li>");
                        $("#movie").typeahead("val", "");
                        vm.movieIds.push(movie.id);
                        console.log(JSON.stringify(vm.movieIds));
                    });


                $.validator.addMethod("validcustomer", function () {
                    return vm.customerId && vm.customerId !== 0;
                }, "Please select a valid customer");

                $.validator.addMethod("atleastonemovie", function () {
                    return vm.movieIds && vm.movieIds.length>0;
                }, "At least one movie");
                

                //validate the form
                var validator = $("#newrental").validate({
                    submitHandler: function () {
                        //e.preventDefault();

                        $.ajax({
                            url: "/api/rentals",
                            method: "post",
                            data: vm
                        })
                            .done(function () {
                                console.log("done");
                                toastr.success("Success");

                                //clear form.
                                $("#customer").typeahead("val", "");
                                $("#movie").typeahead("val", "");
                                $("#movies").empty();

                                vm = { movieIds: [] };
                                validator.resetForm();

                            })
                            .fail(function () {
                                console.log("fail");
                                toastr.error("Error");
                            });
                        //return false becauso not submit standard html form.
                        return false;
                    }
                });

                //$("#newrental").submit(function (e) {
                //    e.preventDefault();
                //    $.ajax({
                //        url: "/api/rentals",
                //        method: "post",
                //        data: vm
                //    })
                //        .done(function () {
                //            console.log("done");
                //            toastr.success("Success");
                //        })
                //        .fail(function () {
                //            console.log("fail");
                //            toastr.error("Error");
                //        });
                //});

            }
            catch (err) {
                alert(err.message);
            }

        });

    </script>
    
    }

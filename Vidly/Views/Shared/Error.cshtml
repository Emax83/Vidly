@*@model HandleErrorInfo*@
@model CustomHandleErrorInfo
@{
    ViewBag.Title = "Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Oops..</h1>
<h2>Si è verificato un errore durante l'elaborazione della richiesta.</h2>
<h4><label>Message:</label>@Model.Exception.Message</h4>

@if (Model.IsLocal)
@*@if (Request.Url.Host.Contains("localhost"))*@
{

    <h3><label>Area:</label>@Model.AreaName</h3>
    <h3><label>Controller:</label>@Model.ControllerName</h3>
    <h3><label>Action:</label>@Model.ActionName</h3>
    <h3><label>Source:</label>@Model.Exception.Source</h3>
    <div class="" style="width:100%; overflow:auto;">
        <label>Stacktrace:</label><br />
        <textarea style="max-width:100%; height:800px; resize:none; " readonly="readonly">@Model.Exception.StackTrace</textarea>
    </div>
}